---
import { timeString12hr } from "../util";

const { data } = Astro.props;
const { hijri, date, day, ...prayerTime } = data;
---

<div class="overflow-x-auto">
 <table class="table text-center">
  <thead>
   <tr>
    <th>Waktu</th>
    <th>Masa</th>
   </tr>
  </thead>
  <tbody>
   {
    Object.entries(prayerTime).map(([key, value]) => (
     <tr>
      <td>{key}</td>
      <td>
       <time>{timeString12hr(value)}</time>
      </td>
     </tr>
    ))
   }
  </tbody>
 </table>
</div>

<style>
 .currentPrayerTime {
  background-color: #ffb86c;
  color: #333;
 }
</style>
