---
const { state, cities } = Astro.props;
const { city } = Astro.params;
---

<div id="daerahList">
	<div class="overflow-y-auto w-max">
		<div class="stats shadow">
			{
				cities.map((el: any) => (
					<div class="stat pt-0 pb-0">
						<a href={"/" + state + "/" + el[0]}>
							<div
								class={
									el.indexOf(city) == 0
										? "stat-title text-white"
										: "stat-title "
								}
							>
								{el[0]}
							</div>
							<div
								class={
									el.indexOf(city) == 0
										? "w-40 text-xs flex-initial break-words text-white"
										: "w-40 text-xs flex-initial break-words text-gray-400"
								}
							>
								{el[1]}
							</div>
						</a>
					</div>
				))
			}
		</div>
	</div>
</div>
