---
import DefaultZoneToaster from "../components/DefaultZoneToaster";
import Navigation from "../components/Navigation";
import Footer from "../layouts/Footer.astro";
import "../styles/main.scss";

interface Props {
	title: string;
	state: string;
	zones: any;
	isIndex: boolean;
}

const { title, state, zones, isIndex } = Astro.props;
const { zone } = Astro.params;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="adhan.app : waktu solat Malaysia" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="min-h-screen" tabindex="0">
		<Navigation
			zones={zones}
			state={state}
			isIndex={isIndex}
			currentZone={zone}
			client:only="react"
		/>
		<main>
			<slot />
			<DefaultZoneToaster client:only="react" />
		</main>
		<Footer />
	</body>
</html>
<style is:global>
	.nav {
		margin: auto;
		width: 1200px;
		max-width: calc(100% - 2rem);
	}
	.subnav {
		top: 0;
		z-index: 1;
		position: sticky;
	}
	.home {
		margin-top: 6px;
	}
	.index.collapse:not(.collapse-open):not(.collapse-close)
		> input[type="checkbox"],
	.index.collapse:not(.collapse-open):not(.collapse-close)
		> input[type="radio"]:not(:checked),
	.index.collapse:not(.collapse-open):not(.collapse-close) > .collapse-title {
		cursor: inherit;
	}
</style>
